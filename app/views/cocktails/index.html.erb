<div class="page-header">
    <h1>Cocktails list</h1>
    <p>Choose a cocktail below or add your own by clicking <%= link_to 'here', new_cocktail_path %>. Rebember, drink responsibly!</p>
  <div class="container">
    <!-- Heading -->
    <!-- Grid row -->
    <div class="row">
      <!-- Card -->
      <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-sm-4">
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path cocktail.image, height: 300, width: 400, crop: :fill %>');">
          <div class="card-description">
            <h2><%= link_to cocktail.name, cocktail_path(cocktail) %></h2>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
